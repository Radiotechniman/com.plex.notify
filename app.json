{
    "id": "com.plex.notify",
    "version": "1.2.0",
    "compatibility": "0.x || 1.x",
    "name": {
        "en": "Plex Notify"
    },
    "description": {
        "en": "Trigger homey with Plex media players"
    },
    "category": "video",
    "images": {
        "large": "assets/images/large.png",
        "small": "assets/images/small.png"
    },
    "author": {
        "name": "Mark Swift",
        "email": "markaswift@gmail.com"
    },
    "flow": {
        "triggers": [
            {
                "id" : "playing",
                "title": { 
                    "en": "Plex starts playing"
                },
                "tokens": [
                    {
                        "name": "player",
                        "title": {
                            "en": "Player"
                        },
                        "example": {
                            "en": "Rasplex"
                        }
                    }
                ]
            },
            {
               "id" : "stopped",
                "title": { 
                    "en": "Plex stops playing"
                }
            },
            {
               "id" : "paused",
                "title": { 
                    "en": "Plex pauses"
                } 
            }

        ]
    }
}